{
    "name": "YouTube Shorts Remover",
    "description": "Remove anything to do with YouTube Shorts",
    "version": "3.0",
    "permissions": ["scripting", "activeTab"],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*",
                "https://m.youtube.com/*"
              ],
            "js": [
                "index.js"
            ]
        }
    ],
    "manifest_version": 3
}